{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2018",
      "es2015.promise",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext"
    ]
  },
  "types": [],
  "exclude": [
    "node_modules/*",
    "node_modules/@types/*",
    "dist/*",
    "misc-stuff",
    "__tests__/*"
  ],
  "include": [
    "src/**/*"
  ]
}
